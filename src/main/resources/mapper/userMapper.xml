<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.buaa.act.sdp.topcoder.dao.UserDao">
    <insert id="insert" parameterType="com.buaa.act.sdp.topcoder.model.user.User" useGeneratedKeys="true"
            keyProperty="id">
        insert into user(handle,country,memberSince,quote,photoLink,copilot,skills)
        values(#{handle},#{country},#{memberSince},#{quote},#{photoLink},#{copilot},
        #{skills,javaType=[Ljava.lang.String;, jdbcType=VARCHAR})
    </insert>

    <update id="update" parameterType="com.buaa.act.sdp.topcoder.model.user.User">
        update user SET country=#{country}, quote=#{quote},photoLink=#{photoLink}, copilot=#{copilot}, skills=#{skills,javaType=[Ljava.lang.String;, jdbcType=VARCHAR} where handle=#{handle}
    </update>

    <select id="getDistinctUsers" resultType="java.lang.String">
        select DISTINCT handle from user
    </select>

    <select id="getAllUsers" resultType="com.buaa.act.sdp.topcoder.model.user.User">
        SELECT * from user;
    </select>

    <update id="updateUser" parameterType="com.buaa.act.sdp.topcoder.model.user.User">
            UPDATE user set competitionNums=#{competitionNums},submissionNums=#{submissionNums},winNums=#{winNums} where handle=#{handle}
    </update>

</mapper>